{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "outDir": "./built"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", ".cache"]
}
